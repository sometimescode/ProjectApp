<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="app" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
        
        <action name="register" class="project.app.action.Register" method="execute">
            <result name="success">/jsp/register.jsp</result>
        </action>

        <action name="login" class="project.app.action.Login" method="execute">
            <result name="success">/jsp/login.jsp</result>
        </action>
    </package>

</struts>